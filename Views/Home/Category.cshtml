@{
    ViewData["Title"] = "Category";
}
@model Category
<style>
    .left,
    .right{
        display:inline-block;
        width: 40%;
        vertical-align: top;
    }
    .display-4{
        margin-bottom: 3rem;
    }
    .left{
        border-right: 3px solid black;
        box-sizing: border-box;
        padding-right: 2rem;
    }
</style>

<div class = "text-center container">
    <h1 class = "display-4">@ViewBag.retrieved.Name</h1>
    <div class="left">
        <h3>Products</h3>
        <ul>
         @foreach (var association in ViewBag.retrieved.AllProducts)
            {
                <li>@association.Product.Name</li>
            }
        </ul>
    </div>
    <div class="right">
        <h3>Add a Product</h3>
        <form action="/categoryAssociation" method = "post">
            <input type="hidden" name="CategoryId" value="@ViewBag.retrieved.CategoryId">
            <select name="ProductId" class="form-control">
                @foreach (var product in ViewBag.unrelated)
                {
                    <option value="@product.ProductId">@product.Name</option>
                }
            </select>
            <input type="submit" value = "Add" class = "btn-outline-success">
        </form>
    </div>
</div>